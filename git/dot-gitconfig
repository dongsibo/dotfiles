[alias]
	tree = log --all --decorate --oneline --graph
	twig = log --decorate --oneline --graph

[core]
	autocrlf = input
	editor = vim
	pager = less --no-init

[credential]
	helper = cache

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	keepBackup = false

